<%= form_with url: login_path, class: "contents", method: :post do |f| %>
  <div class="my-5">
    <%= f.label :email, User.human_attribute_name(:email) %><br />
    <%= f.text_field :emai, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>
  <div class="my-5">
    <%= f.label :password, User.human_attribute_name(:password) %><br />
    <%= f.password_field :password, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>
  <div class="inline">
    <%= f.submit (t'defaults.login'), class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>