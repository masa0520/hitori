<div class="mx-auto md:w-2/3 w-full">
<%= form_with(model: [@store, @review], class: "contents", local: true) do |f| %>
 <div class="my-5">
    <%= f.label :comment %>
    <%= f.text_field :comment, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
    <div class="" id="star">
      <%= f.label :rate,'評価 :', class:"" %>
      <%= f.hidden_field :rate, id: :review_star %>
    </div>
  </div>

  <div class="inline">
    <%= f.submit class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>

<script type="module" src="js/raty.js" >
  new Raty(document.querySelector('#star'), {
      size     : 36,
      starHalf: '<%= asset_path('star-half.png') %>',
      starOff: '<%= asset_path('star-off.png') %>',
      starOn: '<%= asset_path('star-on.png') %>',
      scoreName: 'review[star]',
      half: true
    });
</script>
</div>